<!DOCTYPE html>
<html>
  <head>
    <title>In Season</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <div class=container>
      <nav class='navbar d-flex py-3 border-bottom'>
        <%= link_to 'In Season', root_path, class: 'navbar-brand' %>
        <%= render partial: 'user_locations/form' %>
        <ul class='navbar-nav ms-auto'>
          <li class='nav-item'>
            <% if current_user %>
              <%= link_to 'Sign out', destroy_user_session_path,
                    data: {
                      turbo_method: :delete,
                      turbo_confirm: "Sign out?"
                    },
                    class: 'btn btn-warning' %>
            <% else %>
              <%= link_to 'Sign in', new_user_session_path, class: 'btn btn-success' %>
            <% end %>
          </li>
        </ul>
      </nav>
      <% if notice || alert %>
        <div class='row'>
          <div class="alert alert-<%= notice ? 'warning' : 'danger' %> alert-dismissible fade show" role="alert">
            <%= notice %><%= alert %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        </div>
      <% end %>
    </div>

    <main class='container'>
    	<%= yield %>
    </main>

    <footer class="bg-light container-fluid mt-3">
      <div class="row p-3">
        <div class="col-sm-6">
          Made of open source goodness
        </div>
        <div class="col-sm-6 text-sm-end">
          <%= link_to 'CC BY-SA 4.0', 'https://creativecommons.org/licenses/by-sa/4.0/'%>
        </div>
      </div>
    </footer>
  </body>
</html>
