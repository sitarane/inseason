<div class='row'>
  <div class="alert alert-<%= make_red ? 'danger' : 'warning' %> alert-dismissible fade show" role="alert">
    <% messages.each do |message| %>
      <div><%= message %></div>
    <% end %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
</div>
