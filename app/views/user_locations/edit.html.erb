<%= turbo_frame_tag "location_form" do %>
  <div class="row">
    <%= form_with url: user_location_path, method: :put do |form| %>
      <div class="input-group">
        <%= form.text_field :location, class: "form-control", placeholder: "New location" %>
        <%= form.submit class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
<% end %>
