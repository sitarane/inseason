<div id="<%= dom_id produce %>" class="card" >
  <%=
    if produce.picture.attached?
      link_to(
        image_tag(produce.picture.variant(:thumb), class: "card-img-top"),
        produce_path(produce)
      )
    end
  %>
  <div class="card-body">
    <h2 class="card-title">
      <%= link_to produce.name, produce_path(produce),
            class: 'text-dark text-decoration-none' %>
    </h2>
    <p class="card-text">
      <%= link_to "Wikipedia", produce.main_link, target: '_blank' if produce.main_link %>
    </p>
  </div>
</div>
