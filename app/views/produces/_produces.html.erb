<% counter = 0 %>
<% produces.each do |produce| %>
  <% if counter % 3 == 0 %>
    <div class="row mb-4">
  <% end %>
    <div class="col-md-4">
      <% cache produce do %>
        <%= render 'produce_card', produce: produce %>
      <% end %>
    </div>
  <% if (counter + 1 ) % 3 == 0 %>
    </div>
  <% end %>
  <% counter += 1 %>
<% end %>
