<p style="color: green"><%= notice %></p>

<h1>Produces</h1>

<div id="produces">
  <% counter = 0 %>
  <% @produces.each do |produce| %>
    <% if counter % 3 == 0 %>
      <div class="row mb-4">
    <% end %>
      <div class="col-md-4">
        <%= render partial: 'produce_card', locals: { produce: produce } %>
      </div>
    <% if (counter + 1 ) % 3 == 0 %>
      </div>
    <% end %>
    <% counter += 1 %>
  <% end %>
</div>

<div class="alert alert-warning">
  <%= turbo_frame_tag "location_form" do %>
      <span>You are located in <%=@state%>.</span>
      <%= link_to "That's not right", edit_user_location_path, class: 'btn btn-light' %>
  <% end %>
</div>


<%= link_to "Add produce", new_produce_path, class: 'btn btn-primary' %>
